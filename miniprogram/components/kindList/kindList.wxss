/* miniprogram/components/kindList/kindList.wxss */

.kind-container {
  /* border: 1px solid #000; */
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 15rpx #cccccc;
  margin-bottom: 30rpx;
}

.kindImage {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.kind-common {
  margin: 0 30rpx;
}

.kind-name {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.kind-kindName {
  font-size: 32rpx;
  font-weight: bold;
}

.kind-isSubscription {
  /* border: 1px solid #000; */
  padding: 5rpx 10rpx;
  background: #cccccc;
  font-size: 26rpx;
  border-radius: 5rpx;
  color: #ffffff;
}

.kind-desc {
  font-size: 26rpx;
  padding: 20rpx 0;
  color: #888888;
}

