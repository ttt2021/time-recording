.userinfo {
  background: #A5D63F;
  background-size: cover;
  height: 300rpx;
  /* border: 1px solid #000; */
  margin-top: -10rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  overflow: hidden;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nickname {
  margin-top: 20rpx;
  font-weight: bold;
}

.contant {
  margin-top: 30rpx;
  width: 100%;
  background:#FFFFF0;
}

.contant-column {
  height: 100rpx;
  /* padding-top: 30rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F8F8FF
  ;
  /* border: 1px solid #000; */
  margin: 0 40rpx;
}

.contant-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.contant-title {
  margin-left: 10rpx;
  font-size: 30rpx;
}

.img, .arrow {
  height: 50rpx;
  width: 50rpx;
}

.btn {
  padding: 0;
  margin: 0 40rpx;
  outline: 0;
  border: 0;
  /* border: 1px solid #000; */
  font-size: 30rpx;
}

.btn-arrow {
  padding-top: 20rpx;
}