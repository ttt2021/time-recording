<!--miniprogram/pages/me/me.wxml-->
<view class="container">

	<!-- 获取头像 昵称-->
	<view class="userinfo">
		<!-- 获取头像 -->
		<view class="avatar">
			<open-data type="userAvatarUrl"></open-data>
		</view>

		<!-- 获取昵称 -->
		<view class="nickname">
			<open-data class="" type="userNickName"></open-data>
		</view>
	</view>

	<!-- 栏目 -->
	<view class="contant">
		<!-- 热门排行 -->
		<view
		 class="hot contant-column"
		 bindtap="go"
		 data-to="/pages/user/hot/hot"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/rank.png" />
				<view class="contant-title">
					<text class="title">热门排行</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 最近浏览 -->
		<view
		 class="browse contant-column"
		 bindtap="go"
		 data-to="/pages/user/browse/browse"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/footer.png" />
				<view class="contant-title">
					<text class="title">最近浏览</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 我的收藏 -->
		<view
		 class="collection contant-column"
		 bindtap="go"
		 data-to="/pages/user/collection/collection"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/collection.png" />
				<view class="contant-title">
					<text class="title">我的收藏</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 留言展板 -->
		<view
		 class="message contant-column"
		 bindtap="go"
		 data-to="/pages/user/message/message"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/message.png" />
				<view class="contant-title">
					<text class="title">留言展板</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 大前端技能栈 -->
		<view
		 class="idea contant-column"
		 bindtap="go"
		 data-to="/pages/user/idea/idea"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/idea.png" />
				<view class="contant-title">
					<text class="title">大前端技能栈</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 在线咨询 -->
		<view class="consultation">
			<button class="btn contant-column" open-type="contact">
				<view class="contant-icon">
					<image class="img" src="../../images/robot.png" />
					<view class="contant-title">
						<text class="title">在线咨询</text>
					</view>
				</view>
				<view class="contant-arrow btn-arrow">
					<image class="arrow" src="../../images/arrow-right.png" />
				</view>
			</button>
		</view>

		<!-- 赞赏作者 -->
		<view class="reward contant-column" bindtap="bindtap='likeImg">
			<view class="contant-icon">
				<image class="img" src="../../images/reward.png" />
				<view class="contant-title">
					<text class="title">赞赏作者</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 意见反馈 -->
		<view
		 class="feedback contant-column"
		 bindtap="go"
		 data-to="/pages/user/feedback/feedback"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/feedback.png" />
				<view class="contant-title">
					<text class="title">意见反馈</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

		<!-- 更新日志 -->
		<view
		 class="updated contant-column"
		 bindtap="go"
		 data-to="/pages/user/updated/updated"
		>
			<view class="contant-icon">
				<image class="img" src="../../images/journal.png" />
				<view class="contant-title">
					<text class="title">更新日志</text>
				</view>
			</view>
			<view class="contant-arrow">
				<image class="arrow" src="../../images/arrow-right.png" />
			</view>
		</view>

	</view>
</view>

