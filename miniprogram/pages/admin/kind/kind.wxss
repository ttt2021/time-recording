/* miniprogram/pages/admin/kind/kind.wxss */
.kind-container {
  padding: 30rpx 40rpx 0 40rpx;
  /* border: 1px solid #000; */
  margin-bottom: 60rpx;
}

.kind-item-wrapper {
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 15rpx #cccccc;
}

.img {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.kind-common {
  margin: 20rpx 30rpx;
}

.kind-title {
  font-size: 32rpx;
  font-weight: bold;
}

.kind-desc {
  font-size: 26rpx;
  color: #888888;
}

.kind-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

button::after {
  border: none;
}
  
button {
  background-color: #A5D63F; 
  /* padding-left: 0;
  padding-right: 0; */
  line-height:inherit;
  /* border-radius:0; */
  padding: 10rpx 20rpx;
  color: #ffffff;
  font-size: 28rpx;
}

