/* miniprogram/pages/index/index.wxss */
@import '../../vendor/endMore/index.wxss';

.header-container {
  width: 100%;
  /* border: 1px solid #000; */
}

.lunbo-swiper {
  height: 360rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  /* border: 1px solid #000; */
}

.lunbo-swiper .pic {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.swiper-desc {
  margin-top: -100rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  /* font-weight: bold; */
  padding: 0 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;	/* 控制显示几行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-container {
  background: #eeeeee;
  padding: 15rpx;
  position: relative;
}

.seachResult-wrapper {
  position: absolute;
  z-index: 888;
  background: #dddddd;
  /* border: 1px solid #000; */
  padding: 0 15rpx;
  width: 100%;
  opacity: .6;
  line-height: 60rpx;
}

.search-item {
  border-bottom: 1px solid #ffffff;
}

.search-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #bfbfbf;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

.notice-swiper {
  height: 80rpx;
}

.no-articles-wrapper {
  margin-top: 200rpx;
}